# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Example configuration for analyzing virtualization benefits and challenges
  config.vm.box = "ubuntu/trusty64"
  config.vm.provider "virtualbox" do |vb|
    vb.name = "BenefitsChallenges_VM"
    vb.memory = "1024"
  end

  # This configuration serves as a starting point for practical exercises to explore the benefits and address the challenges of virtualization.
end
