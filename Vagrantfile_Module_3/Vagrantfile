# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Example configuration for using Vagrant with VirtualBox
  config.vm.box = "ubuntu/trusty64"
  config.vm.provider "virtualbox" do |vb|
    vb.name = "VirtualizationPlatforms_VM"
    vb.memory = "1024"
  end

  # Additional configurations can be added here for different platforms or tools
  # as part of the course's practical exercises.
end
