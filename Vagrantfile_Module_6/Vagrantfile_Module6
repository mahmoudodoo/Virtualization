Vagrant.configure("2") do |config|
  # Example configuration for exploring advanced topics in virtualization
  config.vm.box = "ubuntu/trusty64"
  config.vm.provider "virtualbox" do |vb|
    vb.name = "AdvancedTopics_VM"
    vb.memory = "1024"
  end

  # This configuration can be used as a base for exercises on cloud computing, containerization, and emerging virtualization technologies.
end
